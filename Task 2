import java.util.ArrayList;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

public class Main {

    public static void main(String[] args) {
        Set<Integer> initialSet = new HashSet<>();
        initialSet.add(10);
        initialSet.add(5);
        initialSet.add(3);
        initialSet.add(8);
        initialSet.add(2);
        initialSet.add(14);

        System.out.println("Initial Set: " + initialSet);

        List<Integer> currentNumbers = new ArrayList<>(initialSet);

        int stage = 1;

        while (currentNumbers.size() > 1) {
            List<Integer> nextStageNumbers = new ArrayList<>();

            for (int i = 0; i < currentNumbers.size(); i += 2) {
                if (i + 1 < currentNumbers.size()) {
                    int sum = currentNumbers.get(i) + currentNumbers.get(i + 1);
                    nextStageNumbers.add(sum);
                } else {
                    nextStageNumbers.add(currentNumbers.get(i));
                }
            }

            System.out.println("Stage " + stage + " result: " + nextStageNumbers);
            
            currentNumbers = nextStageNumbers;
            stage++;
        }

        if (!currentNumbers.isEmpty()) {
            System.out.println("Final number: " + currentNumbers.get(0));
        }
    }
}
